{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "node",
			"args": [
				"app.js"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": []
		},
		{
			"label": "Start Angular Dev Server",
			"type": "shell",
			"command": "ng",
			"args": [
				"serve",
				"--proxy-config",
				"proxy.conf.json"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/frontend/food-ordering-app"
			},
			"problemMatcher": ["$tsc"]
		}
	]
}